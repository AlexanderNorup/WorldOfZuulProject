<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="sideMenu" prefHeight="500" prefWidth="200"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="worldofzuul.PresentationLayer.Controllers.SideMenuController"
            visible="false"
            style="-fx-background-color: white"
            focusTraversable="true"
            >
    <top>
        <Label fx:id="sideMenuTitleLabel" maxWidth="-Infinity" prefHeight="30.0" text="Test"
               BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <ListView fx:id="sideMenuListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" onKeyPressed="#listViewKey"/>
    </center>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label fx:id="budgetLabel" text="Budget" GridPane.rowIndex="0">
                <GridPane.margin>
                    <Insets left="20.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Calories" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="20.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Protein" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="20.0"/>
                </GridPane.margin>
            </Label>
            <Label fx:id="sideMenuBudgetLabel" alignment="CENTER_RIGHT" text="0" GridPane.columnIndex="1"/>
            <Label fx:id="sideMenuCalorieLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label fx:id="sideMenuProteinLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
    </bottom>

</BorderPane>
