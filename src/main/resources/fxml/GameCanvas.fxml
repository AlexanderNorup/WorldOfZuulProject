<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="root" focusTraversable="true" onKeyPressed="#onKeyPressed" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="worldofzuul.PresentationLayer.Controllers.GameCanvasController">
    <Canvas fx:id="gameCanvas" focusTraversable="true" height="720" width="1280"/>
    <AnchorPane prefHeight="720.0" prefWidth="1280.0">
        <fx:include fx:id="sideMenu" layoutX="1070" layoutY="10" source="SideMenu.fxml"/>
        <fx:include fx:id="textBox" layoutX="215" layoutY="570" source="TextBox.fxml" visible="false"/>
        <fx:include fx:id="shelfMenu" layoutX="10" layoutY="10" source="ShelfMenu.fxml" visible="false"/>
        <MenuButton fx:id="checkoutmenu" layoutX="670.0" layoutY="170.0" mnemonicParsing="false" prefHeight="62.0"
                    prefWidth="160.0"
                    style="-fx-background-color: white; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-border-width: 1px;"
                    text="Do you wanna checkout?" visible="false">
            <items>
                <MenuItem fx:id="yesButton" mnemonicParsing="false" onAction="#checkoutButtonHandle" text="Yes"/>
                <MenuItem fx:id="noButton" mnemonicParsing="false" onAction="#checkoutButtonHandle" text="No"/>
            </items>
        </MenuButton>
    </AnchorPane>
</Pane>
